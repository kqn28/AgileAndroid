<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_item_story_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        tools:text="Story Summary"
        android:text="" />
    <TextView
        android:id="@+id/list_item_story_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Priority"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/list_item_story_criteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Acceptance Criteria"
        android:text=""
        android:layout_marginTop="16dp"
        android:layout_below="@+id/list_item_story_summary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/list_item_story_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Points"
        android:text=""
        android:layout_alignBaseline="@+id/list_item_story_criteria"
        android:layout_alignBottom="@+id/list_item_story_criteria"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>